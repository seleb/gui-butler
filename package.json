{
  "private": true,
  "name": "gui-butler",
  "productName": "gui-butler",
  "version": "2.2.2",
  "description": "A GUI wrapper for itch.io's butler CLI",
  "license": "MIT",
  "author": "Sean S. LeBlanc <sean.s.leblanc@gmail.com>",
  "repository": "github:seleb/gui-butler",
  "main": "process-main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-packager . --appname=gui-butler --icon=favicon.ico --out=bin --prune --overwrite",
    "update-butler": "sh update-butler.sh"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "package-lock.json"
          ]
        }
      ]
    ]
  },
  "devDependencies": {
    "electron": "^13.6.9",
    "electron-packager": "^15.3.0"
  },
  "dependencies": {
    "electron-store": "^8.0.0",
    "normalize.css": "^8.0.1"
  }
}
